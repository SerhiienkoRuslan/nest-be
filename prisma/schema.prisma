generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model ForgottenPassword {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  newPasswordToken  String
  timestamp         DateTime  @default(now())
}

model EmailVerification {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  emailToken        String
  timestamp         DateTime  @default(now())
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  username     String
  password     String
  avatar       String?
  bio          String?
  role         Role    @default(USER)
  posts        Post[]
  validEmail   Boolean @default(true)
  birthday     DateTime?
  phone        String?
  gender       String?
  location     String?
  interests    String[]
  socialMedia  String[]
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  content     String?
  published   Boolean? @default(false)
  authorId    Int?
  author      User?    @relation(fields: [authorId], references: [id])
}

model Message {
  id          Int       @id @default(autoincrement())
  createdDate DateTime  @default(now())
  from        String
  to          String
  message     String
  seen        Boolean   @default(false)
  delivered   Boolean   @default(false)
}
